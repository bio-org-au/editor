  <h4>Searchable Author fields</h4>
  <h5>Name and Abbreviation</h5>
<table class="table table-striped">
  <tr><th>Field</th><th>Description</th></tr>
  <% [
      {field_name: '', description: "default author search is on name and abbreviation - see next line below."},
      {field_name: 'name-or-abbrev:', description: "match on either name or abbreviation, with tokenized terms, so order does not matter"},
      {field_name: 'name:', description: "name, with leading and trailing wildcards added automatically *"},
      {field_name: 'name-exact:', description: "name, supply your own wildcards *"},
      {field_name: 'abbrev:', description: "abbreviation, with leading and trailing wildcards added automatically *"},
      {field_name: 'abbrev-exact:', description: "abbreviation, supply your own wildcards *"},
      {field_name: 'full-name:', description: "fully qualified author name or additional identifying information, leading and trailing wildcards added automatically *"},
      {field_name: 'full-name-exact:', description: "fully qualified author name or additional identifying information, supply your own wildcards *"},
      {field_name: 'notes:', description: "search on notes, add your own wildcards *"},
      ].each do |val| %>
  <tr>
    <td class="width-20-percent">
      <a href="javascript:void(0)" class="searchable-field width-100-percent" title='Add "<%= val[:field_name] %>" field to search.'>
        <span class="blue"><%= val[:field_name] %></span>
      </a>
    </td>
    <td><%= val[:description].html_safe %></td>
    <% if val[:partial].present? %>
      <td><%= render partial: val[:partial] %></td>
    <% else %>
      <td></td>
    <% end %>
  </tr>
  <% end %>
</table>
<p>* Supports search for empty fields.</p>
<br/>

