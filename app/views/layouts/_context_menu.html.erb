<% if available_contexts_for_current_user.any? %>
  <li id="context-selection-menu" class="dropdown-submenu">
    <a tabindex="-1"
      href="#"
      title="Select Working Context"
      id="context-dropdown-menu-link">
      Select Working Context
    </a>
    <ul class="dropdown-menu">
      <% available_contexts_for_current_user.each do |context| %>
        <li role="presentation">
          <%= link_to product_contexts_set_context_index_path(context_id: context[:context_id]),
            method: :post,
            title: context[:description],
            class: "context-switch-link",
            tabindex: "-1" do %>
            <%= editor_icon('layers') %> <%= context[:name] %>
            <% if current_context_id == context[:context_id] %>
              <span class="glyphicon glyphicon-ok pull-right" aria-hidden="true"></span>
            <% end %>
          <% end %>
        </li>
      <% end %>
    </ul>
  </li>
<% end %>
