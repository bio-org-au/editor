<li class="dropdown define-left-border-when-active">
    <a href="#"
       id="new-dropdown-menu-link"
       class="dropdown-toggle"
       tabindex="2"
       data-toggle="dropdown">New<span class="caret"></span>
    </a>
    <ul id="create-dropdown-menu" class="dropdown-menu" role="menu">

      <li role="presentation">
        <%= link_to "Scientific name",
                    name_new_row_path('scientific'),
                    title: 'Add a new scientific name',
                    remote: true,
                    tabindex: '-1' %>
      </li>

      <li role="presentation">
        <%= link_to "Scientific name family and above",
                    name_new_row_path('scientific_family'),
                    title: 'Add a new scientific name family and above',
                    remote: true,
                    tabindex: '-1' %>
      </li>

      <li role="presentation">
        <%= link_to "Phrase name",
                    name_new_row_path('phrase'),
                    title: 'Add a new phrase name',
                    remote: true,
                    tabindex: '-1' %>
      </li>

      <li role="presentation">
        <%= link_to "Hybrid formula name",
                    name_new_row_path('hybrid formula'),
                    title: 'Add a new hybrid name',
                    remote: true,
                    tabindex: '-1' %>
      </li>

      <li role="presentation">
        <%= link_to "Hybrid formula unknown 2nd parent name",
                    name_new_row_path('hybrid-formula-unknown-2nd-parent'),
                    title: 'Add a new hybrid formula unknown 2nd parent name',
                    remote: true,
                    tabindex: '-1' %>
      </li>

      <li role="presentation">
        <%= link_to "Cultivar hybrid name",
                    name_new_row_path('cultivar-hybrid'),
                    title: 'Add a new cultivar hybrid name',
                    remote: true,
                    tabindex: '-1' %>
      </li>

      <li role="presentation">
        <%= link_to "Cultivar name",
                    name_new_row_path('cultivar'),
                    title: 'Add a new cultivar name',
                    remote: true,
                    tabindex: '-1' %>
      </li>

      <li role="presentation">
        <%= link_to "Other name",
                    name_new_row_path('other'),
                    title: 'Add a new other name',
                    remote: true,
                    tabindex: '-1' %>
      </li>

      <li role="presentation" class="divider"></li>

      <li role="presentation">
        <%= link_to "Authors",
                    author_new_row_path,
                    title: 'Add new Author',
                    remote: true,
                    tabindex: '-1' %>
      </li>

      <li role="presentation" class="divider"></li>

        <li role="presentation">
          <%= link_to "Reference",
                    reference_new_row_path,
                    title: 'Add a new reference',
                    remote: true,
                    tabindex: '-1' %>
        </li>

      <% if Rails.configuration.try('batch_loader_aware') && @current_user.batch_loader? %>
        <li role="presentation" class="divider"></li>
        <% if session[:default_loader_batch_id].blank? %> 
        <li role="presentation">
          Set default batch to enable: 
        </li>
        <li role="presentation">
          Loader name accepted or excluded record (needs default batch set)
        </li>
        <li role="presentation">
          Loader name heading (needs default batch set)
        </li>
        <li role="presentation">
          Loader name in-batch-note (needs default batch set)
        </li>
      <% else %>
        <li role="presentation">
          <%= link_to "Loader Name accepted or excluded record",
                    loader_name_new_row_path,
                    {
                    title: 'Add a new "accepted" or "excluded" loader-name (raw data) within the current loader-batch',
                    remote: true,
                    tabindex: '-1'} %>
        </li>

        <li role="presentation">
          <%= link_to "Loader Name heading",
                    loader_name_new_heading_row_path,
                    title: 'Add a new "heading" loader-name within the current loader-batch',
                    remote: true,
                    tabindex: '-1' %>
        </li>

        <li role="presentation">
          <%= link_to "Loader Name batch note",
                    loader_name_new_in_batch_note_row_path,
                    title: 'Add a new "in-batch-note" loader-name within the current loader-batch',
                    remote: true,
                    tabindex: '-1' %>
        </li>
        <% end %>
      <% end %>

    </ul>
</li>
