<!-- Profile Reference List -->
<div style="padding-top:10px;padding-bottom:10px;">
  <p style="margin-bottom: 0">
    <label>Reference:</label>
    <%= profile_item_reference.reference.try(:title).to_s %>
    <%= link_to "Delete", "#", class: "btn btn-warning"%>
  </p>
  <div id="edit_reference_<%= profile_item_reference.profile_item_id_reference_id %>">
    <% field_id = "#{profile_item.id}-#{profile_item_reference.profile_item_id_reference_id}" %>
    <%= form_with model: profile_item_reference, url: save_profile_item_references_path(profile_item_id: profile_item_reference.profile_item_id, reference_id: profile_item_reference.reference_id), method: :patch, remote: true, html: { data: { type: :json, form_type: 'reference_item_form' } } do |f| %>
      <label style="display: flex;">Annotation:</label>
      <%= text_field_tag "profile_item_reference[annotation]",
          profile_item_reference.annotation,
          id: "reference-annotation-#{field_id}",
          class: "form-control width-80-percent",
          placeholder: "Enter reference annotation",
          required: false,
          style: "background-color: white;float: left"
        %>
      <%= f.submit 'Save', style: 'background-color: #5a5a5a; color: white; border: none; padding: 3px 10px; cursor: pointer; border-radius: 4px; margin-left: 10px;' %>
    <% end %>
  </div>
</div>
