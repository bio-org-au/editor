<span class="pull-right">end date</span> <br>
<%= divider %>
<div id="review-calendar">
  <% params[:start_date] = @review_period.start_date %>
  <%= render partial: 'loader/batch/review_periods/tabs/calendar' %>

</div>

<%= divider %>


<h5>Metadata</h5>
Review Period #<%= @review_period.id %>
