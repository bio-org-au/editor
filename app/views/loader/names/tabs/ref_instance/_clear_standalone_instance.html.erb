<% if (@loader_name.preferred_matches.first.standalone_instance_id.blank? && !@loader_name.preferred_matches.first.use_batch_default_reference) %>
  <% maybe_hidden = 'hidden' %>
<% else %>
  <% maybe_hidden = '' %>
<% end %>

    <%= form_with(url: loader_name_match_clear_taxonomy_nomination_path(@loader_name.preferred_matches.first.id), role: 'form', remote: true, method: :patch) do |f| -%>
      <%= f.submit "Clear the choice", id: 'clear-standalone-instance', tabindex: increment_tab_index,
        title: 'Clear any saved choice of the batch default reference or a standalone instance', id: "clear-button", class: "btn btn-primary width-10em pull-right #{maybe_hidden}" -%>
    <% end -%>
