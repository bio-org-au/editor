<% component = params[:component] || 'main' %>
<% display_component = component %>
<% display_component = 'concept note' if component == 'taxonomy_comment' %>
<div class="focus-details">
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>
  <span id="switch-off-details-tab" class="details-toggle pull-right" title="Hide the details tab">&nbsp;<%= editor_icon('window-close') %></span>
  <div class="inner">
    <h3 id='loader-name-details-heading'>
      <%= link_to(@loader_name.simple_name,
                  search_path(query_target: 'loader_name', 
                              query_string: "id:#{@loader_name.id}"),
                  id: 'tab-heading',
                  title: "Simple Name") %>
                  &mdash; <%= display_component.gsub(/_/,' ') %>
    </h3>

    <%= render partial: "loader/names/review/tabs/main/all_tab_headings", locals: {display_component: display_component} %>
    <%= render partial: "loader/names/review/tabs/main/#{@tab}", locals:{display_component: display_component} %>
    <br>
    <span class='server-response-time'><%= "(#{(Time.now - @start_time).round(2)}s)" if @start_time %></span>

  </div><!-- /end .inner -->
</div><!-- /end .focus-details -->

<br>

