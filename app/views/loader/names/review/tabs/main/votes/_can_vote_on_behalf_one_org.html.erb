Review: <%= review.name %> <br
Loader name: <%= @loader_name.full_name %> <br>
Organisation: <%= org.name %> <br>

<%= divider %>

<% votes = Loader::Name::Review::Vote.where(loader_name_id: @loader_name.id) 
                                    .where(batch_review_id: review.id)
                                    .where(org: org.id) %>


<% if votes.blank? %>
  <%= render partial: 'loader/names/review/tabs/main/votes/form',
             locals: {batch: batch,
                      review: review,
                      org: org,
                      batch_reviewer: batch_reviewer} %>

<% elsif votes.size > 1 %>
  More than one vote recorded for this name in this review by your organisation.  
<% else %>
  <%= render partial: 'loader/names/review/tabs/main/votes/show',
             locals: {batch: batch,
                      review: review,
                      org: org,
                      batch_reviewer: batch_reviewer,
                      vote: votes.first} %>
<% end %>


