
<% name_review_vote = Loader::Name::Review::Vote.new %>
<% name_review_vote.loader_name_id = @loader_name.id %>
<% name_review_vote.batch_review_id = review.id %>
<% name_review_vote.org_id = org.id %>

<%= form_with model: name_review_vote, url: 'name_review_vote', data: { turbo: false }, local: false, method: :post do |form| %>
      <%= form.hidden_field :loader_name_id %>
      <%= form.hidden_field :batch_review_id %>
      <%= form.hidden_field :org_id %>
      <br>

      <%= form.radio_button(:vote, true) %> <%= form.label :vote_true, "Agree" %> <br>
      <%= form.radio_button(:vote, false) %> <%= form.label :vote_false, "Disagree" %> 
      <br>
      <br>
      <%= form.submit id: "save-new-batch-review-vote-btn", class: 'btn btn-primary width-6em', value: "Vote", title: "Save vote", tabindex: increment_tab_index %>
      <br>
  <% end %>

