

<!-- _can_vote.html.erb -->
<%= render partial: 'detail_line', locals: {info: reviewer.user.user_name, label: 'user'} %>
<%= render partial: 'detail_line', locals: {info: batch.name, label: 'batch'} %>
<%= render partial: 'detail_line', locals: {info: review.name, label: 'review'} %>
<%= render partial: 'detail_line', locals: {info: org.name, label: 'organisation'} %>
<%= render partial: 'detail_line', locals: {info: @loader_name.full_name, label: 'name'} %>

<%= divider %>


<% if @loader_name.record_type == 'heading' %>
  <%= render partial: 'loader/names/review/tabs/main/votes/votable/voting_in_progress/can_vote/heading',
             locals: {batch: batch,
                      review: review,
                      org: org,
                      reviewer: reviewer} %>
<% else %>
  <%= render partial: 'loader/names/review/tabs/main/votes/votable/voting_in_progress/can_vote/not_heading',
             locals: {batch: batch,
                      review: review,
                      org: org,
                      reviewer: reviewer} %>

<% end %>
