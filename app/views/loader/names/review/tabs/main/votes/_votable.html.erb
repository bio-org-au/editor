
<% voting_allowed_records =  Loader::Batch::Review.where( loader_batch_id: @loader_name.batch.id )
                                       .where( allow_voting: true) %>


<% if voting_allowed_records.blank? %>
  <%= render partial: 'loader/names/review/tabs/main/votes/votable/no_voting_in_progress',
    locals: {batch: @loader_name.batch,
             review: voting_allowed_records.first} %>
<% elsif voting_allowed_records.size > 1 %>
  There is more than one review with voting in progress for <%= @loader_name.batch.name %>.
<% else %>
  <%= render partial: 'loader/names/review/tabs/main/votes/votable/voting_in_progress',
    locals: {batch: @loader_name.batch,
             review: voting_allowed_records.first} %>
<% end %>

