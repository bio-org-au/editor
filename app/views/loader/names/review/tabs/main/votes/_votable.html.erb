
<% reviews_in_progress =  Loader::Batch::Review.where( loader_batch_id: @loader_name.batch.id )
                                       .where( in_progress: true) %>


<% if reviews_in_progress.blank? %>
  There are no reviews in progress for <% @loader_name.batch.name %>.
<% elsif reviews_in_progress.size > 1 %>
  There is more than one review in progress for <% @loader_name.batch.name %>.
<% else %>
  <%= render partial: 'loader/names/review/tabs/main/votes/one_review_in_progress',
    locals: {batch: @loader_name.batch,
             review: reviews_in_progress.first} %>
<% end %>

