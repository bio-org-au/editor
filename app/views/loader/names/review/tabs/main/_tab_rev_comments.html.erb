<% increment_tab_index(0) %>

<% @loader_name.batch.reviews.each do |review| %>
  Review: <%= link_to(review.name,
                      search_path(query_target: "batch reviews", query_string: "id: #{review.id}"),
                      title:"Query the period",class:'blue') %><br>
  <% review.periods.each do |period| %>
    Period: <%= link_to(period.name,
                        search_path(query_target: "batch review periods", query_string: "id: #{period.id}"),
                        title:"Query the period",class:'blue') %><br>
    <% period.loader_name_comments(@loader_name.id).each do |comment| %>
      <%= divider %>
      Comment by <%= comment.reviewer.user_table.full_name %> (<%= comment.reviewer.org.abbrev %>)
      <%= "#{time_ago_in_words(comment.created_at)} #{formatted_timestamp(comment.created_at)}" %><br>
      <hr>
      <%= comment.comment %><br><br>
      <br>
    <% end %>
    <hr>
  <% end %>
    <hr>
<% end %>
