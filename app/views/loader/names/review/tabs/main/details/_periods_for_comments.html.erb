<% @loader_name.batch.active_reviews.each do |review| %>
  Review: <%= review.name %>
  <br>
  <% review.active_periods.each do |period| %>
    Period: <%= period.name %><br>
    <%= period.start_date.strftime("%d-%b-%Y") %>&nbsp;&mdash;&nbsp; <%= period.end_date&.strftime("%d-%b-%Y") %><br>
    <%= render partial: 'loader/names/review/tabs/main/details/periods/comment',
               locals: {period: period} %>
    <b>
    Note:
    </b>
    It isn't necessary to comment - absence of a comment indicates acceptance.
  <% end %>
<% end %>
