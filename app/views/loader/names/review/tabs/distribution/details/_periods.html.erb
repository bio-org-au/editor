<% @loader_name.batch.active_reviews.each do |review| %>
  <%= review.name %>
  <br>
  <% review.active_periods.sort {|x,y| x.start_date <=> y.start_date}.each do |period| %>
    <%= period.name %><br>
    <%= period.start_date.strftime("%d-%b-%Y") %>&nbsp;&mdash;&nbsp; <%= period.end_date&.strftime("%d-%b-%Y") %><br>
    <%= render partial: 'loader/names/review/tabs/distribution/details/periods/reviewer',
               locals: {period: period} %>
  <% end %>
<% end %>
