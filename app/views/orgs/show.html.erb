<div class="focus-details 
            <%= 'freshly-created' if Time.now.strftime("%Y%m%d") == @org.created_at.strftime("%Y%m%d") &&  (@org.created_at - @org.updated_at).abs < 10 %>">
  <% tab_tab_index = @tab_index %>
  <% if notice %>
    <p id="notice"><%= notice %></p>
  <% end %>
  <div class="inner">
    <h3>
      <%= link_to(@org.name, 
                  search_path(query_target: 'Organisations', 
                              query_string: "id:#{@org.id}"),
                  id: 'tab-heading',
                  title: "Query this organisation record") %>
    </h3>
    <%= render partial: 'orgs/tabs/all_tab_headings' %>
    <%= render partial: "orgs/tabs/#{@tab}" %>
    <br>
    <span class='server-response-time'><%= "(#{(Time.now - @start_time).round(2)}s)" if @start_time %></span>

  </div><!-- /end .inner -->
</div><!-- /end .focus-details -->
